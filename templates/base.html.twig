<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ 'welcome'|trans }}{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('scss/app') }}
    {% endblock %}
</head>
<body>
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">{{ 'phonebook'|trans }}</h5>
    <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="/">{{ 'homePage'|trans }}</a>
        {% if app.user %}
            <a class="p-2 text-dark" href="{{ path('phonebook_new') }}">{{ 'add new person'|trans }}</a>
        {% else %}
            <a class="p-2 text-dark" href="{{ path('login') }}">{{ 'login'|trans }}</a>
            <a class="p-2 text-dark" href="{{ path('register') }}">{{ 'register'|trans }}</a>
        {% endif %}
    </nav>
    {% if app.user %}
        <a class="btn btn-outline-primary" href="/logout">{{ 'logout'|trans }}</a>
    {% endif %}
</div>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center w-40">
    {% for message in app.flashes('notice') %}
        <div class="flash-notice alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
</div>


<div class="container">
    {% block body %}{% endblock %}
</div>

<footer class="container">
    <p>&copy; {{ 'phonebook'|trans }} 2017-2018</p>
</footer>
{% block javascripts %}
    {{ encore_entry_script_tags('js/app') }}
{% endblock %}
</body>
</html>
